{
  "name": "kidsloop-audio-service",
  "version": "0.1.0",
  "description": "A service for uploading and downloading audio files.",
  "main": "index.js",
  "scripts": {
    "start": "ts-node -r dotenv/config src/index.ts",
    "dev": "ts-node-dev --respawn --transpile-only --watch src/**/*.ts -r dotenv/config src/index.ts",
    "build": "tsc -p tsconfig-build.json --outDir ./dist",
    "test": "npm run test:unit && npm run test:integration",
    "test:ci": "npm run test:unit && npm run test:integration-ci",
    "test:coverage": "nyc --reporter=lcov --report-dir ./test-results/coverage.lcov npm run test",
    "test:codecov": "nyc --reporter=cobertura --report-dir ./test-results/coverage.xml npm run test:ci && npx codecov",
    "test:unit": "cross-env NEW_RELIC_HOME=tests LOG_STYLE=SILENT mocha --require ts-node/register tests/unit/**/*.test.ts",
    "test:integration": "cross-env DOTENV_CONFIG_PATH=./.env.test mocha --require ts-node/register -r dotenv/config tests/integration/**/*.test.ts --timeout 8000",
    "test:integration-ci": "cross-env DOTENV_CONFIG_PATH=./.env.test.ci mocha --require ts-node/register -r dotenv/config tests/integration/**/*.test.ts --timeout 8000",
    "lint": "eslint \"{src,tests}/**/*.ts\" --ext .ts",
    "lint-and-fix": "eslint \"{src,tests}/**/*.ts\" --ext .ts --fix",
    "format:check": "prettier --check \"{src,tests}/**/*.ts\" \"*.json\"",
    "format": "prettier --write \"{src,tests}/**/*.ts\" \"*.json\"",
    "prepare": "husky install",
    "pre-commit": "lint-staged"
  },
  "config": {
    "commitizen": {
      "path": "@commitlint/cz-commitlint"
    }
  },
  "lint-staged": {
    "*.ts": [
      "eslint",
      "prettier --check"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^16.0.2",
    "@commitlint/config-conventional": "^16.0.0",
    "@commitlint/cz-commitlint": "^16.0.0",
    "@fluffy-spoon/substitute": "^1.208.0",
    "@types/chai": "^4.2.21",
    "@types/chai-as-promised": "^7.1.4",
    "@types/compression": "^1.7.1",
    "@types/cookie-parser": "^1.4.2",
    "@types/express": "^4.17.13",
    "@types/jsonwebtoken": "^8.5.4",
    "@types/mocha": "^9.0.0",
    "@types/node": "^16.4.10",
    "@types/node-fetch": "^2.5.12",
    "@types/uuid": "^8.3.1",
    "@typescript-eslint/eslint-plugin": "^5.9.1",
    "@typescript-eslint/parser": "^5.9.1",
    "chai": "^4.3.4",
    "chai-as-promised": "^7.1.1",
    "commitizen": "^4.2.4",
    "cross-env": "^7.0.3",
    "dotenv": "^10.0.0",
    "eslint": "^8.6.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-mocha": "^10.0.3",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^7.0.1",
    "inquirer": "^8.1.2",
    "lint-staged": "^12.1.7",
    "mocha": "^9.0.3",
    "node-mocks-http": "^1.10.1",
    "nyc": "^15.1.0",
    "prettier": "^2.5.1",
    "standard-version": "^9.3.1",
    "ts-node": "^10.2.1",
    "ts-node-dev": "^1.1.8",
    "typescript": "^4.4.3",
    "uuid": "^8.3.2"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.25.0",
    "apollo-server-express": "^3.6.1",
    "aws-sdk": "^2.963.0",
    "class-validator": "^0.13.1",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.5",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "graphql": "^15.8.0",
    "jsonwebtoken": "^8.5.1",
    "kidsloop-nodejs-logger": "bitbucket:calmisland/kidsloop-nodejs-logger#v0.2.15",
    "kidsloop-token-validation": "bitbucket:calmisland/kidsloop-token-validation#v1.4.1",
    "newrelic": "^8.4.0",
    "pg": "^8.7.1",
    "reflect-metadata": "^0.1.13",
    "tweetnacl": "^1.0.3",
    "type-graphql": "^1.1.1",
    "typeorm": "^0.2.36"
  }
}